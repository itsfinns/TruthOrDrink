<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="TruthOrDrink.ScanCode"
             Title=""
             NavigationPage.HasBackButton="True"
             Background="{StaticResource BackgroundColor1}">
    <VerticalStackLayout>
        <Label 
            Text="Scan hier een code"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="28"
            TextColor="{StaticResource TextColorMain}"/>

        <toolkit:CameraView/>

        <Label
            Text="Tip: Je kunt hier sessie en vrienden codes scannen!"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            FontSize="14"
            TextColor="{StaticResource TextColorPop}"/>

    </VerticalStackLayout>
</ContentPage>