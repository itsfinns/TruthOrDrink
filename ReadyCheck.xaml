<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrink.ReadyCheck"
             Title=""
             BackgroundColor="{StaticResource BackgroundColor2}">
    <VerticalStackLayout>
        <Label 
            Text="Truth Or Drink"
            FontSize="34"
            TextColor="{StaticResource TextColorMain}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label
            Padding="0,50,0,0"
            Text="Alle spelers klaar?"
            FontSize="28"
            TextColor="{StaticResource TextColorMain}"
            VerticalOptions="Center"
            HorizontalOptions="Center"/>
                                            <!--onderstaande 2 misschien nog in een horizontal stack zetten voor vizueel-->
        <Label
            Padding="0,50,0,0"
            Text="Gekozen categorie:"
            FontSize="24"
            TextColor="{StaticResource TextColorMain}"
            VerticalOptions="Center"
            HorizontalOptions="Center"/>


        <Label x:Name="SelectedCategoryLabel" FontSize="20" TextColor="{StaticResource TextColorMain}" HorizontalOptions="Center" Margin="0,10,0,0"/>


        <Button
            Margin="0,75,0,0"
            Text="START"
            FontSize="28"
            BackgroundColor="{StaticResource ButtonColor3}"
            HeightRequest="90"
            WidthRequest="300"
            Clicked="OnStartClicked"/>
    </VerticalStackLayout>
</ContentPage>