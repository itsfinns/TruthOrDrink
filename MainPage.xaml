<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruthOrDrink.MainPage"
             Title="Truth Or Drink"
             BackgroundColor="#613c2c">

    <ScrollView>
        <AbsoluteLayout
            Padding="30,0">

            <Label
                Text="Truth Or Drink"
                FontSize="34"
                HorizontalOptions="Center"
                Style="{StaticResource Headline}"
                TextColor="Black"
                 />

            <Button
                Text="Vrienden Toevoegen" 
                FontSize="28"
                Background="AliceBlue"
                TextColor="Black"
                Clicked="OnAddFriendsClicked"
                AbsoluteLayout.LayoutBounds="20,150"
                WidthRequest="300"
                HeightRequest="100"
                CornerRadius="10"/>

            <Button
                Text="Sessie Starten" 
                FontSize="28"
                Background="AntiqueWhite"
                TextColor="Black"
                Clicked="OnStartSessionClicked"
                AbsoluteLayout.LayoutBounds="20,350"
                WidthRequest="300"
                HeightRequest="100"
                CornerRadius="10"/>

            <ImageButton
                Source="ettings_app_icon.png"
                Aspect="AspectFit"
                AbsoluteLayout.LayoutBounds="20, 700"/>

        </AbsoluteLayout>
    </ScrollView>

</ContentPage>
